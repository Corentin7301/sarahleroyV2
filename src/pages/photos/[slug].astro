---
import DefaultLayout from '../../layouts/default.astro';
// import menu from '../../datas/menu.json'

const {slug} = Astro.request.params
const {props} = Astro.props
import natureDatas from "../../pagesDatas/nature.json"
import portraitDatas from "../../pagesDatas/portrait.json"
import artistiqueDatas from "../../pagesDatas/artistique.json"
let pageDatas = {}

if(slug === "nature") {
    pageDatas = natureDatas
}
if(slug === "portrait") {
    pageDatas = portraitDatas
}
if(slug === "artistique") {
    pageDatas = artistiqueDatas  
}



export async function getStaticPaths() {
    const d = ["portrait","nature","artistique"]
    return d.map((menu)=> {
        return [
            {
                params: {slug: menu}
            }
        ]
    }) 
}
---

<DefaultLayout client:visible title={pageDatas.metas.title} description={pageDatas.metas.description} imageLink={pageDatas.metas.imageLink} twitterTitle={pageDatas.metas.twitterTitle} twitterDescription={pageDatas.metas.twitterDescription}>
    <h2 class=" text-white bg-black">{slug}</h2>
</DefaultLayout>