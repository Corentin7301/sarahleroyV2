---
import HomeLayout from '../layouts/homeLayout.astro';
import homeDatas from '../pagesDatas/home.json'
import menu from '../datas/menu.json'
---

<HomeLayout client:visible menu={menu} title={homeDatas.metas.title} description={homeDatas.metas.description}
    imageLink={homeDatas.metas.imageLink} twitterTitle={homeDatas.metas.twitterTitle}
    twitterDescription={homeDatas.metas.twitterDescription}>

    <img src={`https://res.cloudinary.com/sarah3902/image/upload/q_auto/fl_lossy${homeDatas.photos[1].photo}`} alt="Sarah Leroy" class=" logo hidden"/>
    <div class="masonry-grid">
        {homeDatas.photos.map((photo)=>{
        return <img src={`https://res.cloudinary.com/sarah3902/image/upload/q_auto/fl_lossy${photo.photo}`}
            alt={photo.title} class=" widthOfPhoto w-[47%] shadow-xl rounded-md bg-transparent" />
        })}
    </div>
</HomeLayout>


<script src="https://unpkg.com/magic-grid/dist/magic-grid.min.js"></script>
<script>
    let masonryGrid = new MagicGrid({
        container: ".masonry-grid", // Required. Can be a class, id, or an HTMLElement.
        static: true, // Required for static content.
        gutter: 10,
    });

    masonryGrid.listen();
</script>

<style>
    .widthOfPhoto:nth-child(2) {
        --tw-shadow: none;
        box-shadow: none;
        padding: 5px 5px 0 5px;
    }


@media (max-width: 373px) {
.widthOfPhoto {
    width: 100%;
}
.widthOfPhoto:nth-child(2) {
    display: none;
}
.logo {
    display: block;
    width: 80%;
    margin: auto;
    margin-bottom: 20px;
}}
</style>